<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b2"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="60dp"
            android:layout_height="69dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="314dp"
            android:layout_marginEnd="41dp"
            app:srcCompat="@android:drawable/stat_sys_vp_phone_call"
            android:layout_alignParentRight="true"
            android:layout_marginRight="41dp"/>

        <TextView
            android:id="@+id/tv1"
            android:layout_width="255dp"
            android:layout_height="58dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="37dp"
            android:layout_marginTop="319dp"
            android:inputType="phone"
            android:text="03360591022"
            android:textSize="36sp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="37dp"
            android:fontFamily="cursive"></TextView>
        <TextView
            android:id="@+id/tv2"
            android:layout_width="324dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="45dp"
            android:layout_marginTop="51dp"
            android:text="Click any Alphabet to check its Occurence"
            android:fontFamily="cursive"
            android:textColor="@color/purple"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="45dp">
        </TextView>
        <GridView
            android:id="@+id/gv1"
            android:layout_width="326dp"
            android:layout_height="61dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="133dp"
            android:layout_marginEnd="42dp"
            android:background="@color/yellow"
            android:cacheColorHint="@color/gray"
            android:columnWidth="20dp"
            android:contextClickable="true"
            android:listSelector="@drawable/b2"
            android:numColumns="5"
            android:scrollbarThumbHorizontal="@color/yellow"
            android:scrollbarThumbVertical="@color/yellow"
            android:textAlignment="gravity"
            android:textDirection="firstStrong"
            android:textFilterEnabled="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="42dp"></GridView>
        <TextView
            android:id="@+id/tv3"
            android:layout_width="231dp"
            android:layout_height="39dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="272dp"
            android:layout_marginEnd="143dp"
            android:text="Dialer"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            android:fontFamily="cursive"
            android:layout_alignParentRight="true"
            android:layout_marginRight="143dp"></TextView>

    </RelativeLayout>
</LinearLayout>